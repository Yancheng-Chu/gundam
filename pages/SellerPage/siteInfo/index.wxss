/* pages/SellerPage/siteInfo/index.wxss */
page {
  background: #F7F7F7;
  padding-top: 226rpx;
}

button {
  padding: 0;
  margin: 0;
}

.navigationBar {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 226rpx;
  background: #FF942A;
  box-sizing: border-box;
  padding: 140rpx 0 44rpx 0;
}

.navigationBar .row {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.navigationBar van-icon {
  position: absolute;
  left: 58rpx;
}

.navigationBar .pageName {
  font-size: 36rpx;
  line-height: 36rpx;
  color: #FFFFFF;
}

.infoContainer {
  overflow: hidden;
  box-sizing: border-box;
  padding: 48rpx 32rpx 0 32rpx
}

.infoContainer .sitePic {
  box-sizing: border-box;
  width: 100%;
  min-height: 300rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx 0 rgba(255, 234, 234, 0.7);
  padding-top: 32rpx;
  margin-bottom: 40rpx;
}

.van-uploader {
  margin-right: 44rpx;
  margin-bottom: 16rpx;
}

.van-uploader__wrapper {
  justify-content: space-evenly;
}

.header {
  display: flex;
}

.header .star {
  font-size: 36rpx;
  line-height: 44rpx;
  color: #FF9225;
  margin-left: 16rpx;
  margin-right: 8rpx;
}

.header .title {
  font-size: 36rpx;
  line-height: 44rpx;
  color: #9E9E9E;
}

.header input {
  flex: 1;
  text-align: right;
}

.placeholder {
  font-size: 36rpx;
  color: #9E9E9E;
}

.van-uploader {
  margin-left: 44rpx;
  margin-top: 16rpx;
}

.upload {
  width: 160rpx;
  height: 168rpx;
  border-radius: 40rpx;
  background: #DEDEDE;
  display: flex;
  justify-content: center;
  align-items: center;
}

.infoContainer .infoCard {
  box-sizing: border-box;
  padding-top: 38rpx;
  padding-right: 32rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #FFFFFF;
  box-shadow: 0 4rpx 20rpx 0 rgba(255, 234, 234, 0.7);
  margin-bottom: 40rpx;
}

.basicInfo {
  box-sizing: border-box;
  min-height: 290rpx;
  border-radius: 12rpx;
  background: #FFFFFF;
  box-shadow: 0 4rpx 20rpx 0 rgba(255, 234, 234, 0.7);
  padding: 32rpx 40rpx;
  margin-bottom: 52rpx;
}

.basicInfo .title {
  font-size: 36rpx;
  line-height: 44rpx;
  color: #9E9E9E;
}

.btn {
  overflow: hidden;
  width: 686rpx;
  height: 88rpx;
  border-radius: 188rpx;
  background: linear-gradient(101deg, #FFBC7B 0%, #FF8F1F 100%);
  font-size: 36rpx;
  line-height: 88rpx;
  color: #FFFFFF;
  margin-bottom: 60rpx;
}