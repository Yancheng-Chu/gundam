page {
  background: #F7F7F7;
  padding-top: 226rpx;
}

button {
  padding: 0;
  margin: 0;
}

.navigationBar {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 226rpx;
  background: #FF942A;
  box-sizing: border-box;
  padding: 140rpx 0 44rpx 0;
}

.navigationBar .row {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.navigationBar van-icon {
  position: absolute;
  left: 58rpx;
}

.navigationBar .pageName {
  font-size: 36rpx;
  line-height: 36rpx;
  color: #FFFFFF;
}

.van-tab {
  --tab-text-color: #9E9E9E;
  padding: 0 !important;
}

.van-tabs--line .van-tabs__wrap {
  --tabs-line-height: 106rpx;
}

.van-ellipsis {
  width: 100%;
  height: 106rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.van-tab--active {
  --tab-active-text-color: #FFBE6F;
}

.van-tab--active .van-ellipsis {
  font-size: 36rpx;
}

/* .van-tabs__line {
  display: none;
} */

.siteScroll {
  box-sizing: border-box;
  height: calc(100vh - 332rpx);
  padding: 48rpx 34rpx 220rpx 34rpx;
}

.siteScroll .siteCard {
  width: 100%;
  height: 220rpx;
  border-radius: 12rpx;
  background: #FFFFFF;
  margin-bottom: 36rpx;
  position: relative;
  overflow: hidden;
}

.siteCard .siteDetail {
  box-sizing: border-box;
  padding: 24rpx 0 0 48rpx;
  width: 100%;
  height: 100%;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  position: absolute;
  z-index: 1;
  transition: all .3s linear;
}

.siteCard .delete {
  width: 182rpx;
  height: 100%;
  border-radius: 12rpx;
  background: #FF8080;
  line-height: 220rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 0;
  font-size: 24rpx;
  color: #FFFFFF;
}

.siteDetail .edit {
  position: absolute;
  right: 24rpx;
  bottom: 32rpx;
}

.siteDetail image {
  width: 152rpx;
  height: 160rpx;
  border-radius: 40rpx;
  background: #DEDEDE;
  margin-right: 58rpx;
}

.siteDetail .siteInfo {
  width: 380rpx;
  display: flex;
  flex-direction: column;
}

.siteInfo .siteName {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 36rpx;
  line-height: 44rpx;
  color: #9E9E9E;
  margin-bottom: 8rpx;
}

.siteInfo .date {
  font-size: 24rpx;
  line-height: 44rpx;
  color: #9E9E9E;
  margin-bottom: 32rpx;
}

.siteInfo .times {
  font-size: 24rpx;
  line-height: 44rpx;
  color: #9E9E9E;
}

.addBtn {
  width: 686rpx;
  height: 88rpx;
  line-height: 88rpx;
  position: fixed;
  left: 32rpx;
  bottom: 66rpx;
  background: linear-gradient(101deg, #FFBC7B 0%, #FF8F1F 100%);
  border-radius: 184rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  color: #FFFFFF;
  z-index: 1;
}

.addBtn van-icon {
  margin-right: 27rpx;
  vertical-align: middle;
}

.van-popup {
  border-radius: 12rpx;
}

.confirmCard {
  width: 606rpx;
  height: 300rpx;
  border-radius: 12rpx;
  background: #EEEEEE;
}

.confirmCard .content {
  height: 196rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.content .title {
  font-size: 48rpx;
  line-height: 48rpx;
  color: #333333;
}

.content .tips {
  font-size: 28rpx;
  line-height: 28rpx;
  color: #9E9E9E;
  margin-top: 24rpx;
}

.confirmCard .footer {
  box-sizing: border-box;
  border-top: 2rpx solid #D8D8D8;
  height: 102rpx;
  display: flex;
  align-items: center;
}

.footer .cancel {
  flex: 1;
  text-align: center;
  font-size: 48rpx;
  line-height: 48rpx;
  color: #2375F1;
}

.footer .line {
  width: 2rpx;
  height: 100%;
  background-color: #D8D8D8;
}

.footer .confirm {
  flex: 1;
  text-align: center;
  font-size: 48rpx;
  line-height: 48rpx;
  color: #CECECE;
}